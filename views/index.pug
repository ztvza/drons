extends layout/base.pug

block content
	section.p-5.mb-4.bg-light.rounded-3
		.container
			.container-fluid.py-5
				h1.display-5.fw-bold= message
				p.col-md-8.fs-4.pl-0 Покупайте дронов от проверенного производителя! Следите за соседями, и другими странными личностями! Ну и +500 лайков в инсту!
				button.btn.btn-primary.btn-lg(type="button") Посмотреть всех
				
	section
		.container
			h2.text-center Топовые дроны:
			.row
				each product in products
					+product-card(product)

	include partials/request-call-form.pug